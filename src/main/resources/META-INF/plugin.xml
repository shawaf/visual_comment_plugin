
<idea-plugin>
    <id>me.shawaf.visualcomment</id>
    <name>Visual Comment</name>
    <version>1.0.1</version>
    <vendor email="mohamed.elshawaf.1@gmail.com" url="https://www.shawaf.me/">Shawaf</vendor>
    <idea-version since-build="242" until-build="242.*" />

    <description><![CDATA[
        This plugin allows you to add a visualized comment to your code, which includes a text description and an image,
        making it easier to understand the purpose of the code.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add extensions here -->
    </extensions>

    <actions>
        <action id="me.shawaf.visualcomment.VisualCommentAction" class="me.shawaf.visualcomment.VisualCommentAction" text="Add Visual Comment" description="Insert a visualized comment with text and an image">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
    <!-- Extension Points -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- Add the gutter icon for visualized comments -->
        <codeInsight.lineMarkerProvider language="kotlin" implementationClass="me.shawaf.visualcomment.VisualCommentGutterIcon"/>
    </extensions>
</idea-plugin>